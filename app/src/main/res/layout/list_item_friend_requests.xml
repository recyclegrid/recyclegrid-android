<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/network_image_user"
        android:foreground="@drawable/ic_circle_image_foreground"
        android:layout_width="48dp"
        android:layout_height="48dp" />

    <TextView
        android:id="@+id/text_friend_name"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:padding="14dp"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/image_decline_friend_request"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="24dp"
        android:padding="6dp"
        android:alpha="0.5"
        app:srcCompat="@drawable/ic_remove_circle_outline_black_36dp" />

    <ImageView
        android:id="@+id/image_accept_friend_request"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="6dp"
        app:srcCompat="@drawable/ic_check_circle_black_36dp" />
</LinearLayout>